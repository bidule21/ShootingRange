<UserControl x:Class="ShootingRange.View.PersonEditControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShootingRange.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:PersonEditViewModel x:Key="PersonEditViewModel"/>
    </UserControl.Resources>
    <StackPanel DataContext="{Binding Source={StaticResource PersonEditViewModel}}">
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Person.FirstName}" VerticalAlignment="Center" Width="300" Height="31"/>
        <TextBox HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Person.LastName}" VerticalAlignment="Center" Width="300" Height="27"/>
        <ListBox Height="173"/>
    </StackPanel>
</UserControl>
