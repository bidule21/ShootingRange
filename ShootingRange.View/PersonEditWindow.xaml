    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal" Height="322">
            <Grid Margin="5,5,5,0" Height="293" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="113"/>
