<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:View="clr-namespace:ShootingRange.View;assembly=ShootingRange.View"
        xmlns:viewModel="clr-namespace:ShootingRange.ViewModel;assembly=ShootingRange.ViewModel"
        x:Class="ShootingRange.MainWindow.MainWindow"
        Title="MainWindow" Height="350" Width="525"
        View:PersonListView.SelectedPersonChanged = "PersonListView_OnSelectedPersonChanged">
    <Window.Resources>
        <viewModel:MainViewModel x:Key="MainViewModel"/>
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource MainViewModel}}" Margin="0,0,0,-1">
        <View:PersonListView PersonListItems="{Binding PersonNames}" HorizontalAlignment="Left" Height="237" Margin="10,10,0,0" VerticalAlignment="Top" Width="228"/>
        <!--<View:PersonEditControl x:Name="PersonEditControl" HorizontalAlignment="Left" Margin="52,247,0,0" VerticalAlignment="Top" Width="403" Height="77"/>-->
    </Grid>
</Window>
