<wpf:CustomUserControl x:Class="ShootingRange.ServiceDesk.View.Controls.UcSelectParticipation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:ShootingRange.ServiceDesk.ViewModel;assembly=ShootingRange.ServiceDesk.ViewModel"
             xmlns:wpf="clr-namespace:Gui.Wpf;assembly=Gui.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300" d:DataContext="{d:DesignInstance Type=viewModel:SelectParticipationViewModel}">
    <Grid Margin="5" d:DataContext="{d:DesignData Source=../DesignTimeData/SelectParticipationData.xaml}">
        <ListView ItemsSource="{Binding Participations}" SelectedItem="{Binding SelectedParticipation}">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type viewModel:ParticipationViewModel}">
                    <TextBlock Text="{Binding Path=ProgramName}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</wpf:CustomUserControl>
